local shears = "rbxassetid://12400283822"  local object = game:GetObjects(shears)[1] object.Parent = game.Players.LocalPlayer.Backpack object.Name = "Shears"  local plrcharacter = game.Player.LocalPlayer.Character local humanoid = plrcharacter.Character:FindFirstChild("Humanoid")  local idle = object.Animations.idle.AnimationID local use = object.Animations.use.AnimationID local useFinish = object.Animations.usefinish.AnimationID  local Anim1 = Instance.new("Animation") Anim1.AnimationId = idle Anim1.Looped = true local Anim2 = Instance.new("Animation") Anim2.AnimationId = use local Anim3 = Instance.new("Animation") Anim3.AnimationId = useFinish  local IdleA = humanoid.Animator:LoadAnimation(Anim1) local UseA = humanoid.Animator:LoadAnimation(Anim2) local UseFinishA = humanoid.Animator:LoadAnimation(Anim3)  local Equipped = false  object.Activated:Connect(function ()     local dB = true     if dB == true then         UseA:Play()         dB = false     end      if dB == false then         return     end end)  object.Equipped:Connect(function ()      Equipped = true      for _, i in next, humanoid:GetPlayingAnimationTracks() do         i:Stop()     end     IdleA:Play() end)  object.Unequipped:Connect(function ()     Equipped = false      IdleA:Stop() end)  game.Workspace.CurrentCamera.ChildAdded:Connect(function(screech)     if screech.Name == "Screech" and math.random(1, 400) ~= 1 then         if not Equipped then             return         end         if Equipped then             game:GetService("Debris"):AddItem(screech, 0.05)         end     end end)
